<resources>

    <!-- Base application theme. -->
    <style name="BookTheme" parent="Theme.MaterialComponents.Light.NoActionBar" >
        <item name="android:colorAccent">@color/colorMaroon</item>
        <item name="android:colorForeground">@color/primaryDarkColor</item>
        <item name="android:navigationBarColor">@color/secondaryColor</item>
        <item name="android:colorBackground">@color/backgroundOchre</item>
        <item name="android:statusBarColor">@color/primaryDarkColor</item>
        <item name="android:colorPrimary">@color/primaryColor</item>
        <item name="android:colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="android:textColorPrimary">@color/primaryColor</item>
        <item name="android:textColorPrimaryInverse">@color/secondaryColor</item>
        <item name="android:textColorSecondary">@color/secondaryDarkColor</item>
        <item name="android:textColorSecondaryInverse">@color/primaryLightColor</item>
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/primaryLightColor</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:dropDownListViewStyle">@style/popup</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/primaryTextColor</item>
    </style>

    <style name="popup" parent="Widget.AppCompat.ListView.DropDown">
        <item name="android:divider">@color/headerDarkColor</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

</resources>
